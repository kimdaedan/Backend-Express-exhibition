// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // This reads the address from your .env file
}

model Karya {
  id          Int      @id @default(autoincrement())
  title       String
  prodi       String
  nama_ketua  String?
  nim         String?
  description String?
  upload_type String
  file_path   String?
  youtube_url String?
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
  status      String   @default("Pending")
}

model User {
  id         Int      @id @default(autoincrement())
  nama       String
  nim        String   @unique // NIM harus unik untuk login
  prodi      String
  password   String   // Kita akan simpan password yang sudah di-hash
  created_at DateTime @default(now())
}